<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <!-- バリデーション -->
        <div id="error_explanation">
          <% if @user.errors.any? %>
            <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>
        </div>
        <%= form_with model:@user, local:true do |f| %>

          <div class="form-group">
            <label for="UserName">Name</label>
            <%= f.text_field :name, autofocus: true, class: "form-control name", id:"inputName", placeholder:"user_name"%>
          </div>

          <div class="form-group">
            <label for="Image">Image</label>
            <%= f.attachment_field :profile_image, class: "form-control-file user_image", placeholder: "user_image" %>
          </div>

          <div class="form-group">
            <label for="Introduction">Introduction</label>
            <%= f.text_area :introduction, class: "form-control introduction", id:"introduction", placeholder:"user_introduction"%>
          </div>
          <div class="form-group">
            <%= f.submit "Update User", class: "btn btn-sm btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</main>
